
<h1>The Good Blog Posts</h1>


  <% @articles.each do |article| %>
      <div id="article-<%=article.id%>">
        <h3 class="article-title"><%= link_to "#{article.title}", article_path(article) %></h3>
        <div class = 'article-text'><%= article.text %></div>
        <div class = 'article-controls'><%= link_to 'Edit', edit_article_path(article) %> |
        <%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></div>
      </div>
  <% end %>

